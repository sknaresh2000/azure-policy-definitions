{
    "mode": "All",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Network/virtualNetworks/subnets"
                },
                {
                    "count": {
                        "field": "Microsoft.Network/virtualNetworks/subnets/addressPrefixes[*]",
                        "where": {
                            "count": {
                                "value": "[parameters('routableRanges')]",
                                "name": "routableRange",
                                "where": {
                                    "value": "[ipRangeContains(current('routableRange'), current('Microsoft.Network/virtualNetworks/subnets/addressPrefixes[*]'))]",
                                    "equals": true
                                }
                            },
                            "equals": 0
                        }
                    },
                    "greater": 0
                }
            ]
        },
        "then": {
            "effect": "DeployIfNotExists",
            "details": {
                "name": "[last(split(field('Microsoft.Network/virtualNetworks/subnets/routeTable.id'),'/'))]",
                "resourcegroupname": "[string(first(skip(split(field('Microsoft.Network/virtualNetworks/subnets/routeTable.id'),'/'),4)))]",
                "evaluationDelay": "AfterProvisioningSuccess",
                "type": "Microsoft.Network/routeTables",
                "existenceCondition": {
                    "count": {
                        "field": "Microsoft.Network/routeTables/routes[*]",
                        "where": {
                            "allOf": [
                                {
                                    "field": "Microsoft.Network/routeTables/routes[*].addressPrefix",
                                    "equals": "0.0.0.0/0"
                                },
                                {
                                    "field": "Microsoft.Network/routeTables/routes[*].nextHopType",
                                    "in": [
                                        "None",
                                        "VirtualAppliance"
                                    ]
                                }
                            ]
                        }
                    },
                    "greater": 0
                },
                "roleDefinitionIds": [
                    "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                ],
                "deployment": {
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "location": {
                                    "type": "string"
                                },
                                "routeTableName": {
                                    "type": "string"
                                },
                                "resourcegroup": {
                                    "type": "string"
                                }
                            },
                            "resources": [
                                {
                                    "type": "Microsoft.Network/routeTables",
                                    "apiVersion": "2020-05-01",
                                    "name": "[parameters('routeTableName')]",
                                    "location": "[parameters('location')]",
                                    "tags": {},
                                    "disableBgpRoutePropagation" : false,
                                    "properties": {
                                        "routes": [
                                            {
                                                "name": "setbypolicy",
                                                "properties": {
                                                    "addressPrefix": "0.0.0.0/0",
                                                    "nextHopType": "None"
                                                }
                                            }
                                        ]
                                    }
                                }
                            ]
                        },
                        "parameters": {
                            "location": {
                                "value": "[field('location')]"
                            },
                            "resourcegroup": {
                                "value": "[string(first(skip(split(field('Microsoft.Network/virtualNetworks/subnets/routeTable.id'),'/'),4)))]"
                            },
                            "routeTableName": {
                                "value": "[last(split(field('Microsoft.Network/virtualNetworks/subnets/routeTable.id'),'/'))]"
                            }
                        }
                    }
                }
            }
        }
    },
    "parameters": {
        "routableRanges": {
            "type": "array",
            "metadata": {
                "displayName": "Routable Ranges",
                "description": "List of Routable Azure CIDR Ranges"
            },
            "defaultValue": [
                "10.0.0.0/16"
            ]
        }
    }
}